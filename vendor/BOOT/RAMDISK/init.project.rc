    group system misc input

on property:sys.boot_completed=1
# set the owner of partition control's block node  to media and system
    chown media system /dev/block/platform/msm_sdcc.1/by-name/control
    chmod 0660 /dev/block/platform/msm_sdcc.1/by-name/control

